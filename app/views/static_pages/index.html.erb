<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="display-4 text-center mb-4">Flickr Photo Search</h1>
      <%= form_with(url: search_photos_path, method: :get, class: "mb-5") do |f| %>
        <div class="input-group">
          <%= f.text_field :user_id, 
              value: params[:user_id], 
              class: "form-control form-control-lg",
              placeholder: "Enter Flickr User ID",
              "aria-label": "Flickr User ID" %>
          <%= f.submit "Search", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
      <% if @photos.present? %>
        <h2 class="h3 mb-4">Flickr Photos</h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" data-controller="position">
          <% @photos.each do |photo| %>
            <div class="col">
              <div class="card h-100 shadow-sm">
                <%= image_tag "https://live.staticflickr.com/#{photo.server}/#{photo.id}_#{photo.secret}.jpg", 
                    class: "card-img-top img-fluid", 
                    alt: photo.title,
                    style: "height: 200px; object-fit: cover;" %>
                <div class="card-body">
                  <h5 class="card-title text-truncate" title="<%= photo.title %>"><%= photo.title %></h5>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-info" role="alert">
          No photos found. Please try a different Flickr User ID.
        </div>
      <% end %>
    </div>
  </div>
</div>
